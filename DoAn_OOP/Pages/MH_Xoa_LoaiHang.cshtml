@page
@model Web_QuanLyCuaHang_OOP.Pages.MH_Xoa_LoaiHangModel
@{
    ViewData["title"] = "Xóa Loại Hàng";
}

<h4>@ViewData["title"]</h4>

<table>
    <tr>
        <th>Id</th>
        <th>Tên</th>
    </tr>
    <tr>
        <td>@Model.lh.Id</td>
        <td>@Model.lh.Name</td>
    </tr>
</table>
<span>Hiện có @Model.soLuong mặt hàng có loại hàng nay!</span>
<br /><br />
<span>Bạn có chắc chắn muốn xóa?</span>
<br />
<form method="post">
    <input type="submit" value="Xóa" />
</form>
@Model.chuoiThongBao

<br /><br />

<table>
    <tr>
        <th>ID</th>
        <th>Tên</th>
        <th>Công Ty</th>
        <th>Loại Hàng</th>
        <th>Năm Sản Xuất</th>
        <th>Hạn Sử Dụng</th>
        <th>Số Lượng</th>
    </tr>
    @foreach (var s in Model.dsMatHang)
    {
        <tr>
            <td>@s.Id</td>
            <td>@s.Name</td>
            <td>@s.Company</td>
            <td>@s.Category</td>
            <td>@s.Year</td>
            <td>@s.Exp.ToString("dd/MM/yyyy")</td>
            <td>@s.SoLuong</td>
        </tr>
    }
    </>
</table>
